</joint>

<joint name="work_to_l_base" type="fixed">
  <parent link="work"/>
  <child link="l_base"/>
  <origin xyz="0.1 0.5 0.01" rpy="0 0 0" />
</joint>

<joint name="l_base_to_l_side" type="fixed">
  <parent link="l_base"/>
  <child link="l_side"/>
  <origin xyz="0.09 0 0.11" rpy="0 0 0" />
</joint>

</robot>