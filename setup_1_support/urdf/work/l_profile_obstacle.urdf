<?xml version="1.0"?>
<robot name="l_profile_obstacle" xmlns:xacro="http://wiki.ros.org/xacro">

<link name="world" />

<link name="floor">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="2 2 0.02"/>
    </geometry>
    <material name="grey"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="2 2 0.02"/>
    </geometry>
  </collision>
</link>

<joint name="world_to_floor" type="fixed">
  <parent link="world"/>
  <child link="floor"/>
  <origin xyz="1 0 -0.02" rpy="0 0 0" />
</joint>

<link name="l_base">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.2 1 0.02"/>
    </geometry>
    <material name="green"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.2 1 0.02"/>
    </geometry>
  </collision>
</link>

<link name="l_side">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.02 1 0.2"/>
    </geometry>
    <material name="green"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.02 1 0.2"/>
    </geometry>
  </collision>
</link>

<joint name="world_to_l_base" type="fixed">
  <parent link="world"/>
  <child link="l_base"/>
  <origin xyz="0.9 0 0.01" rpy="0 0 0" />
</joint>

<joint name="l_base_to_l_side" type="fixed">
  <parent link="l_base"/>
  <child link="l_side"/>
  <origin xyz="0.09 0 0.11" rpy="0 0 0" />
</joint>

<link name="obstacle">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 0.1 0.05"/>
    </geometry>
    <material name="green"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 0.1 0.04"/>
    </geometry>
  </collision>
</link>

<joint name="l_base_to_obstacle" type="fixed">
  <parent link="l_base"/>
  <child link="obstacle"/>
  <origin xyz="-0.02 0 0.045" rpy="0 0 0" />
</joint>

</robot>
